<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- iisnode configuration -->
    <iisnode
      nodeProcessCommandLine="node"
      loggingEnabled="true"
      logDirectory="..\..\LogFiles\iisnode"
      devErrorsEnabled="true"
      debuggingEnabled="false"
      node_env="production"
    />

    <handlers>
      <!-- Node.js API entry point -->
      <add name="iisnode" path="dist/src/index.js" verb="*" modules="iisnode" />
    </handlers>

    <rewrite>
      <rules>
        <!-- Don't interfere with node-inspector debugging -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^dist/src/index.js/debug[/]?" />
        </rule>

        <!-- All requests are mapped to the Node.js API entry point -->
        <rule name="DynamicContent">
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="True" />
          </conditions>
          <action type="Rewrite" url="dist/src/index.js" />
        </rule>
      </rules>
    </rewrite>

    <security>
      <requestFiltering>
        <hiddenSegments>
          <remove segment="bin" />
        </hiddenSegments>
      </requestFiltering>
    </security>

    <httpErrors existingResponse="PassThrough" />
    <directoryBrowse enabled="false" />

    <staticContent>
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
  </system.webServer>
</configuration>