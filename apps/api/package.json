{
  "name": "@parkingmate/api",
  "version": "0.0.0",
  "private": true,
  "description": "ParkingMate Backend API with Fastify",
  "type": "module",
  "scripts": {
    "dev": "tsx watch --clear-screen=false src/index.ts",
    "build": "tsc",
    "start": "node dist/index",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "biome check ./src",
    "lint:fix": "biome check --write ./src",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "dotenv -e ../../.env -- drizzle-kit studio",
    "api:generate": "openapi-typescript openapi.yml -o src/generated/api-types.ts"
  },
  "dependencies": {
    "@fastify/cors": "^10.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/jwt": "^9.0.1",
    "@fastify/multipart": "^9.2.1",
    "@fastify/rate-limit": "^10.3.0",
    "@fastify/swagger": "^9.3.0",
    "@fastify/swagger-ui": "^5.2.0",
    "@sendgrid/mail": "^8.1.6",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.3",
    "fastify": "^5.2.0",
    "http-status-codes": "^2.3.0",
    "js-yaml": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "nodemailer": "^7.0.9",
    "postgres": "^3.4.5",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@parkingmate/typescript-config": "workspace:*",
    "@types/bcrypt": "^5.0.2",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^7.0.2",
    "dotenv-cli": "^10.0.0",
    "drizzle-kit": "^0.30.1",
    "openapi-typescript": "^7.4.4",
    "pino-pretty": "^13.1.2",
    "tsx": "^4.19.2",
    "typescript": "~5.8.3"
  }
}
